<!--index.wxml-->
<!--1px = 750/320 = 2.34rpx;-->
<view class="container" style="display: none">

  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/more/loading.gif"></image>
  </view>

  <block wx:else >
    <view class="tuijian">
      <view class="tuijianName">
        {{tuijian}}
      </view>
      <view class="tuijianTitle">
        今日推荐
      </view>
    </view>
  
    <swiper previous-margin="10px" next-margin="10px" class="swiper_box" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange" id="swiper" circular="true">
      <swiper-item wx:for="{{goods}}" wx:key="id" style="overflow: visible;border-radius: 50%;">
        <view class="swiper_item" style="transform: scale({{ swiperCurrent == index ? 0.9 : 0.65 }}) translate({{ (swiperCurrent == index - 1 || swiperCurrent == index + 1) ? (swiperCurrent - index) * 30 : 0 }}%, 0); transition: 0.4s;">
          <view>
            <image mode="aspectFill" data-id="{{item.id}}" bindtap="toDetailsTap" src="{{item.pic}}_m" lazy-load="true"/>
          </view>
          <view class="title">{{item.name}}</view>
          <view class="flex-wrp">
            <view class="price">¥ {{item.originalPrice}}</view>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </block>
  
</view>
<button bindtap="createShare" style="display: none;">小程序码</button>
<button bindtap="createPopup">遮罩层</button>
<wxc-popup animation-mode="none" align="center" status="{{popupStatus}}" locked="hide">
  <view style="background: rgba(232,86,84,0.9);width: 400rpx;height:500rpx;position: relative;">
    <wxc-icon size="30" type="close" color="#fff" style="position: absolute;top:-5rpx;right: 10rpx;"></wxc-icon>
    <view style="margin-top: 90rpx">
      <view style="width: 400rpx;text-align: center;font-size: 33rpx;color:white;">
        恭喜！
      </view>
      <view style="width: 400rpx;text-align: center;font-size: 30rpx;color:white;">
        砍价创建成功
      </view>
      <view style="width: 400rpx;text-align: center;font-size: 30rpx;color:white;">
        快邀请好友来砍价吧！
      </view>

      <view style="width: 400rpx;display: flex;margin-top: 30rpx;">
          <view style="flex-grow: 1;display: flex;flex-direction: column;align-items: center;">
            <button open-type="share" style="width: 100rpx;height: 100rpx;border-radius: 50%;background: url('../../images/share.png') no-repeat center center;background-color: #fff;">
            </button>
            <view style="font-size: 25rpx;color:#fff;margin-top: 10rpx;">邀请好友</view>
          </view>
          <view style="flex-grow: 1;display: flex;flex-direction: column;align-items: center;">
            <button open-type="share" style="width: 100rpx;height: 100rpx;border-radius: 50%;background: url('../../images/erweima.png') no-repeat center center;background-color: #fff;">
            </button>
            <view style="font-size: 25rpx;color:#fff;margin-top: 10rpx;">生成二维码</view>
          </view>
      </view>
    </view>
    
  </view>
</wxc-popup>
