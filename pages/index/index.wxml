<!--index.wxml-->
<!--1px = 750/320 = 2.34rpx;-->
<view class="container">

  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/more/loading.gif"></image>
  </view>

  <block wx:else >
    <view style="font-size: 50rpx;margin-top: 8%;">
      AYL 运动蓝牙耳机
    </view>
    <view class="swiper_box">
      <view wx:for="{{goods}}" wx:key="id" style="overflow: visible;border-radius: 50%;">
        <view class="swiper_item">
          <view>
            <image mode="aspectFill" data-id="{{item.id}}" bindtap="toDetailsTap" src="{{item.pic}}_m" lazy-load="true"/>
          </view>
          <view class="title">{{item.characteristic}}</view>
          <view class="flex-wrp">
            <wxc-price class="goods-minPrice">{{item.minPrice}}</wxc-price>
            <wxc-price status='del' del-color="#aaa" class="goods-originalPrice">{{item.originalPrice}}</wxc-price>
          </view>
        </view>
      </view>
    </view>
  </block>
  
</view>
